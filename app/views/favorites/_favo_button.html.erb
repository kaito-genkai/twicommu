<div class="d-inline-block">
  <% if current_user.favoing?(tweet) %>
    <%= form_with(model: current_user.favorites.find_by(tweet_id: tweet.id), local: true, method: :delete) do |f| %>
      <%= hidden_field_tag :tweet_id, tweet.id %>
      <%= f.submit 'お気に入り解除', class: 'btn btn-danger btn-sm' %>
    <% end %>
  <% else %>
    <%= form_with(model: current_user.favorites.build, local: true) do |f| %>
      <%= hidden_field_tag :tweet_id, tweet.id %>
      <%= f.submit 'お気に入り', class: 'btn btn-primary btn-sm' %>
    <% end %>
  <% end %>
</div>  