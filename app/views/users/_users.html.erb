<% if users.any? %>
  <ul class="list-unstyled">
    <% users.each do |user| %>
      <li class="media mt-2">
        <% if user.image? %>
          <%= image_tag user.image.thumb100.url, :class => "mw50" %>
        <% else %>
          <%= image_tag "noimage.png", :size => "100x100" %>
        <% end %>
        <div class="media-body">
          <div>
            <%= user.name %>
          </div>
          <div>
            <p><%= link_to "ユーザ詳細", user_path(user) %></p>
          </div>
        </div>
      </li>
    <% end %>  
  </ul>
  <%= paginate users %>
<% end %>  
  